<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:background="#FF000000"
              android:textColor="#FFFFFFFF"
>

<View 
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:background="@null"
/>

<Button 
android:id="@+id/btnRole"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="30dp"
android:layout_marginRight="30dp"
android:textSize="16sp"
android:textColor="#FFFFFFFF"
android:background="@null"
/>

<LinearLayout 
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@null"
android:layout_marginLeft="30dp"
android:layout_marginRight="30dp"
android:layout_marginTop="10dp"
>

<TextView 
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="13sp"
android:textColor="#FFFFFFFF"
android:text="音量"
/>

<Button
android:id="@+id/volume_decrease_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="-"
android:contentDescription="音量减小"
android:textSize="15sp"
/>

<SeekBar 
android:id="@+id/seekbar_aisound_volume"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:max="100"
android:progressDrawable="@drawable/seekbar_style"
android:thumb="@drawable/thumb"
/>

<Button
android:id="@+id/volume_increase_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="+"
android:contentDescription="音量增大"
android:textSize="15sp"
/>

</LinearLayout>

<LinearLayout 
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@null"
android:layout_marginLeft="30dp"
android:layout_marginRight="30dp"
android:layout_marginTop="5dp"
>


<TextView 
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="13sp"
android:textColor="#FFFFFFFF"
android:text="语速"
/>

<Button
android:id="@+id/speed_decrease_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="-"
android:contentDescription="语速减慢"
android:textSize="15sp"
/>

<SeekBar 
android:id="@+id/seekbar_aisound_speed"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:max="100"
android:progressDrawable="@drawable/seekbar_style"
android:thumb="@drawable/thumb"
/>

<Button
android:id="@+id/speed_increase_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="+"
android:contentDescription="语速加快"
android:textSize="15sp"
/>

</LinearLayout>

<LinearLayout 
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@null"
android:layout_marginLeft="30dp"
android:layout_marginRight="30dp"
android:layout_marginTop="5dp"
>

<TextView 
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="13sp"
android:textColor="#FFFFFFFF"
android:text="语调"
/>

<Button
android:id="@+id/pitch_decrease_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="-"
android:contentDescription="语调降低"
android:textSize="15sp"
/>

<SeekBar 
android:id="@+id/seekbar_aisound_pitch"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:max="100"
android:progressDrawable="@drawable/seekbar_style"
android:thumb="@drawable/thumb"
/>

<Button
android:id="@+id/pitch_increase_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="+"
android:contentDescription="语调升高"
android:textSize="15sp"
/>

</LinearLayout>

<Button 
android:id="@+id/btnStyle"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="10dp"
android:layout_marginLeft="30dp"
android:layout_marginRight="30dp"
android:textSize="15sp"
android:textColor="#FFFFFFFF"
android:background="@null"
/>

<Button 
android:id="@+id/btnNumber"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:layout_marginLeft="30dp"
android:layout_marginRight="30dp"
android:textSize="15sp"
android:textColor="#FFFFFFFF"
android:background="@null"
/>

<Button 
android:id="@+id/btnWords"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:layout_marginLeft="30dp"
android:layout_marginRight="30dp"
android:textSize="15sp"
android:textColor="#FFFFFFFF"
android:background="@null"
/>

<LinearLayout 
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@null"
android:layout_marginLeft="32dp"
android:layout_marginRight="32dp"
android:layout_marginTop="13dp"
>

<TextView 
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_weight="1"
android:text="心阳世界(XY) V 2016"
android:textSize="10sp"
android:textColor="#FFFFFFFF"
android:background="@null"
android:gravity="center|center_vertical"
/>

<Button 
android:id="@+id/btn_test"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textColor="#FFFFFFFF"
android:text="测试"
android:background="@null"
/>

</LinearLayout>

<View 
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:background="@null"
/>

</LinearLayout>
